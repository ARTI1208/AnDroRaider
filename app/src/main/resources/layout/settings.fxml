<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>
    <VBox visible="false" managed="false">
        <Text text="Java sources"/>
        <HBox>
            <TextField promptText="apktool path" fx:id="javaSourcesPath"/>
            <Button text="Select" fx:id="javaSourcesPathSelectButton"/>
        </HBox>
    </VBox>
    <Text text="General apktool options"/>
    <HBox>
        <TextField promptText="Apktool path" fx:id="apktoolPath"/>
        <Button text="Select" fx:id="apktoolPathSelectButton"/>
    </HBox>
    <Text text="Framework"/>
    <VBox spacing="10">
        <HBox>
            <TextField promptText="Framework path" fx:id="frameworkPath"/>
            <Button text="Select folder" fx:id="frameworkFolderPathSelectButton"/>
            <Button text="Select file" fx:id="frameworkFilePathSelectButton"/>
        </HBox>
    </VBox>
    <VBox visible="false" managed="false">
        <Text text="Decompile options"/>
        <HBox>
            <TextField promptText="apktool path"/>
            <Button text="Select"/>
        </HBox>
    </VBox>
    <VBox visible="false" managed="false">
        <Text text="Recompile options"/>
        <HBox>
            <TextField promptText="apktool path"/>
            <Button text="Select" />
        </HBox>
    </VBox>
    <HBox>
        <Button fx:id="clearDataButton" text="Clear app data" />
    </HBox>
</VBox>
