<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>
    <Text text="Java sources"/>
    <HBox>
        <TextField promptText="apktool path" fx:id="javaSourcesPath"/>
        <Button text="Select" fx:id="javaSourcesPathSelectButton"/>
    </HBox>
    <Text text="General apktool options"/>
    <HBox>
        <TextField promptText="apktool path" fx:id="apktoolPath"/>
        <Button text="Select" fx:id="apktoolPathSelectButton"/>
    </HBox>
    <Text text="Framework"/>
    <VBox spacing="10">

        <fx:define>
            <ToggleGroup fx:id="frameworkType" />
            <ToggleGroup fx:id="frameworkFolderType" />
        </fx:define>

        <RadioButton text="Static framework file" toggleGroup="$frameworkType" fx:id="frameworkFileRB" selected="true"/>
        <HBox disable="${frameworkFolderRB.selected}">
            <TextField promptText="framework path" fx:id="frameworkFilePath"/>
            <Button text="Select" fx:id="frameworkFilePathSelectButton"/>
        </HBox>
        <RadioButton text="Framework in folder" toggleGroup="$frameworkType" fx:id="frameworkFolderRB"/>
        <VBox spacing="10" disable="${frameworkFileRB.selected}">
            <VBox.margin>
                <Insets left="50"/>
            </VBox.margin>
            <RadioButton text="Autoselect (search in project parent folder)" toggleGroup="$frameworkFolderType" fx:id="frameworkSmartFolderRB"/>
            <RadioButton text="Static folder" toggleGroup="$frameworkFolderType" fx:id="frameworkStaticFolderRB"/>
            <HBox>
                <TextField promptText="framework path" fx:id="frameworkFolderPath"/>
                <Button text="Select" fx:id="frameworkFolderPathSelectButton"/>
            </HBox>
        </VBox>
    </VBox>
    <Text text="Decompile options"/>
    <HBox>
        <TextField promptText="apktool path"/>
        <Button text="Select"/>
    </HBox>
    <Text text="Recompile options"/>
    <HBox>
        <TextField promptText="apktool path"/>
        <Button text="Select" />
    </HBox>
    <HBox>
        <Button fx:id="clearDataButton" text="Clear app data" />
    </HBox>
</VBox>
