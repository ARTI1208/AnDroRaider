<?xml version="1.0" encoding="UTF-8"?>
<project name="androraider" default="all">
  
  
  <property file="androraider.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.kotlinjavaruntime.classpath">
    <pathelement location="${basedir}/lib/kotlin-reflect.jar"/>
    <pathelement location="${basedir}/lib/kotlin-stdlib-jdk7.jar"/>
    <pathelement location="${basedir}/lib/kotlin-stdlib-jdk8.jar"/>
    <pathelement location="${basedir}/lib/kotlin-stdlib.jar"/>
    <pathelement location="${basedir}/lib/kotlin-test.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module AnDroRaider -->
  
  <dirname property="module.androraider.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.androraider" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="androraider.output.dir" value="${module.androraider.basedir}/out/production/AnDroRaider"/>
  <property name="androraider.testoutput.dir" value="${module.androraider.basedir}/out/test/AnDroRaider"/>
  
  <path id="androraider.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="androraider.module.production.classpath">
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="androraider.runtime.production.module.classpath">
    <pathelement location="${androraider.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="androraider.module.classpath">
    <pathelement location="${androraider.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="androraider.runtime.module.classpath">
    <pathelement location="${androraider.testoutput.dir}"/>
    <pathelement location="${androraider.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.androraider">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.androraider">
    <patternset refid="excluded.from.module.androraider"/>
  </patternset>
  
  <path id="androraider.module.sourcepath">
    <dirset dir="${module.androraider.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.androraider" depends="compile.module.androraider.production,compile.module.androraider.tests" description="Compile module AnDroRaider"/>
  
  <target name="compile.module.androraider.production" description="Compile module AnDroRaider; production classes">
    <mkdir dir="${androraider.output.dir}"/>
    <javac destdir="${androraider.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.androraider}"/>
      <bootclasspath refid="androraider.module.bootclasspath"/>
      <classpath refid="androraider.module.production.classpath"/>
      <src refid="androraider.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.androraider"/>
    </javac>
    
    <copy todir="${androraider.output.dir}">
      <fileset dir="${module.androraider.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.androraider.tests" depends="compile.module.androraider.production" description="compile module AnDroRaider; test classes" unless="skip.tests"/>
  
  <target name="clean.module.androraider" description="cleanup module">
    <delete dir="${androraider.output.dir}"/>
    <delete dir="${androraider.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.androraider, clean.artifact.androraider" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.androraider" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.androraider" value="${basedir}/out/artifacts/AnDroRaider"/>
    <property name="artifact.output.androraider:jar" value="${basedir}/out/artifacts/AnDroRaider_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.AnDroRaider" value="${artifacts.temp.dir}/AnDroRaider.jar"/>
    <property name="temp.jar.path.AnDroRaider.jar" value="${artifacts.temp.dir}/1/AnDroRaider.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.androraider" description="clean AnDroRaider artifact output">
    <delete dir="${artifact.output.androraider}"/>
  </target>
  
  <target name="artifact.androraider" depends="init.artifacts, compile.module.androraider" description="Build &#39;AnDroRaider&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
             uri="javafx:com.sun.javafx.tools.ant"
             classpath="/media/arti1208/Windows/Program Files/Java/jdk1.8.0_131/lib/ant-javafx.jar" />
    <mkdir dir="${artifact.output.androraider}"/>
    <copy todir="${artifact.temp.output.AnDroRaider}">
      <fileset dir="${androraider.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_AnDroRaider" dir="${artifact.temp.output.AnDroRaider}" includes="**/*.jar">
      <exclude name="AnDroRaider.jar"/>
    </fx:fileset>
    <fx:fileset id="all_AnDroRaider" dir="${artifact.temp.output.AnDroRaider}" includes="**/*.jar"/>
    <fx:application id="AnDroRaider_id" name="AnDroRaider" mainClass="ru.art2000.androraider.windows.launcher.Launcher"/>
    <fx:jar destfile="${artifact.temp.output.AnDroRaider}/AnDroRaider.jar">
      <fx:application refid="AnDroRaider_id"/>
      <fileset dir="${artifact.temp.output.AnDroRaider}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_AnDroRaider"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="AnDroRaider"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.AnDroRaider}/deploy" outfile="AnDroRaider">
      <fx:application refid="AnDroRaider_id"/>
      <fx:info title="AnDroRaider"/>
      <fx:resources>
        <fx:fileset refid="all_AnDroRaider"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.androraider}">
      <fileset dir="${artifact.temp.output.AnDroRaider}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.AnDroRaider}"/>
    </delete>
  </target>
  
  <target name="artifact.androraider:jar" depends="init.artifacts, compile.module.androraider" description="Build &#39;AnDroRaider:jar&#39; artifact">
    <property name="artifact.temp.output.androraider:jar" value="${artifacts.temp.dir}/AnDroRaider_jar"/>
    <mkdir dir="${artifact.temp.output.androraider:jar}"/>
    <jar destfile="${temp.jar.path.AnDroRaider.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${androraider.output.dir}"/>
      <zipfileset src="${basedir}/lib/kotlin-stdlib.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-reflect.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-test.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-stdlib-jdk7.jar"/>
      <zipfileset src="${basedir}/lib/kotlin-stdlib-jdk8.jar"/>
    </jar>
    <copy file="${temp.jar.path.AnDroRaider.jar}" tofile="${artifact.temp.output.androraider:jar}/AnDroRaider.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.androraider, artifact.androraider:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.androraider:jar}"/>
    <copy todir="${artifact.output.androraider:jar}">
      <fileset dir="${artifact.temp.output.androraider:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>